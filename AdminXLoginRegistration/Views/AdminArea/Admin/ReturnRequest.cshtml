@model IEnumerable<LibraryManagementSystem.ViewModel.ReturnRequestViewModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Return Requests - Brain Station 23 PLC</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background: #f5f7fa;
        }

        .bs23-section-card {
            border-radius: 16px;
            background: #fff;
            box-shadow: 0 4px 12px rgba(0,46,109,0.12);
            margin-top: 2.5rem;
        }

        .bs23-header {
            background: linear-gradient(90deg,#002e6d 70%,#1565c0 100%);
            color: #fff;
            border-radius: 16px 16px 0 0;
            padding: 1.2rem 0 1rem 0;
            text-align: center;
            font-size: 2rem;
            font-weight: 700;
            letter-spacing: .5px;
            margin-bottom: 0;
        }

        .bs23-table thead {
            background: #eaf2fb;
            color: #002e6d;
            font-weight: 600;
            letter-spacing: .6px;
        }

        .bs23-table th, .bs23-table td {
            vertical-align: middle !important;
            font-size: 1.07rem;
        }

        .bs23-table tbody tr {
            transition: background .15s;
        }

            .bs23-table tbody tr:hover {
                background: #f2f8ff;
            }

        .bs23-approve-btn {
            background: #0A5CA9 !important;
            color: #fff !important;
            font-weight: 600;
            border-radius: 6px !important;
            min-width: 140px;
            transition: .16s;
        }

            .bs23-approve-btn:hover {
                background: #002e6d !important;
            }
    </style>
</head>
<body>
    <div class="container" style="max-width: 1100px;">
        <div class="card bs23-section-card border-0">
            <div class="bs23-header mb-0">
                <i class="bi bi-arrow-bar-up"></i> Return Requests
            </div>
            <div class="card-body p-4">
                <table class="table table-bordered table-hover text-center bs23-table mb-0" id="ReturnRequestTable" style="border-radius:9px;overflow:hidden;">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>User Name</th>
                            <th>Borrow Date</th>
                            <th>Due Date</th>
                            <th>Fine Amount</th>
                            <th>Approve</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.UserName</td>
                                <td>@item.BorrowDate.ToShortDateString()</td>
                                <td>@item.DueDate?.ToShortDateString()</td>
                                <td>
                                    @if (item.FineAmount > 0)
                                    {
                                        <span class="text-danger fw-semibold">@item.FineAmount.ToString("C")</span>
                                    }
                                    else
                                    {
                                        <span class="text-success">@item.FineAmount.ToString("C")</span>
                                    }
                                </td>
                                <td>
                                    <form asp-action="ApproveReturn" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.BookLoanId" />
                                        <button type="submit" class="btn bs23-approve-btn">
                                            <i class="bi bi-check-circle me-1"></i> Approve Return
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
