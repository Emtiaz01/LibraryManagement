@model LibraryManagementSystem.ViewModel.EditRolesViewModel

@{
    Layout = "~/Views/Shared/_AdminPage.cshtml";
    ViewData["Title"] = "Edit Roles";
}

<h2>Edit Roles for @Model.Email</h2>

<form asp-controller="Admin" asp-action="EditRole" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />

    <div class="form-group">
        @foreach (var role in Model.Roles)
        {
            <div class="form-check">
                <input class="form-check-input"
                       type="checkbox"
                       name="selectedRoles"
                       value="@role"
                       @(Model.UserRoles.Contains(role) ? "checked" : "") />
                <label class="form-check-label">@role</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary mt-3">Update Roles</button>
</form>
