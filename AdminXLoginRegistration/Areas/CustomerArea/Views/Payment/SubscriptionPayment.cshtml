@{
    Layout = "~/Views/Shared/_AdminPage.cshtml";
    var plan = ViewBag.Plan as string ?? "monthly";
    var amount = (int)(ViewBag.Amount ?? 100);
}
<style>
    .payment-container {
        max-width: 410px;
        margin: 40px auto;
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 8px 38px -12px #1565c039;
        padding: 35px 32px 28px 32px;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .payment-header {
        text-align: center;
        margin-bottom: 32px;
    }

    .payment-logo {
        height: 44px;
        object-fit: contain;
        margin-bottom: 16px;
    }

    .membership-badge {
        font-size: 1.6rem;
        color: #ffb300;
        font-weight: bold;
        letter-spacing: 2px;
        margin-bottom: .95rem;
    }

    .payment-title {
        font-size: 1.34rem;
        font-weight: 700;
        color: #FFA000;
        letter-spacing: 0.03em;
        margin-bottom: 3px;
    }

    .payment-amount {
        color: #e67e22;
        font-size: 1.21rem;
        font-weight: 600;
    }

    .form-label {
        font-size: .96rem;
        font-weight: 500;
        color: #17497B;
        margin-bottom: 4px;
    }

    .form-control {
        border-radius: 9px;
        font-size: 1.08rem;
        border: 1px solid #e5e5ef;
        height: 38px;
        padding-left: 13px;
        background: #f9fbff;
    }

    .pay-btn {
        margin-top: 18px;
        font-size: 1.14rem;
        width: 100%;
        border-radius: 9px;
        font-weight: 700;
        letter-spacing: .01em;
        padding: 12px 0;
        background: linear-gradient(90deg,#ffd740 40%,#ffb300 100%);
        border: none;
        color: #523800;
        box-shadow: 0 2px 14px -8px #ff980039;
    }

        .pay-btn:hover {
            background: linear-gradient(90deg,#ffe082,#fbc02d 100%);
        }

    .card-icons {
        display: flex;
        justify-content: flex-end;
        gap: 4px;
        margin-bottom: 8px;
    }

        .card-icons img {
            height: 27px;
            margin-left: 2px;
        }
</style>
<div class="payment-container">
    <div class="payment-header">
        <div class="membership-badge">
            <i class="bi bi-star-fill"></i>
            Premium Subscription
            <i class="bi bi-gem"></i>
        </div>
        <img src="https://upload.wikimedia.org/wikipedia/commons/5/5e/Visa_Inc._logo.svg"
             alt="Visa" class="payment-logo" />
        <div class="payment-title">Activate Premium Plan</div>
        <div class="payment-amount"><b>Plan:</b> <span>@plan.ToUpper()</span> | Total: <span>৳@amount</span></div>
    </div>
    <form asp-action="SubscriptionPayment" method="post" autocomplete="off">
        @Html.AntiForgeryToken()
        <input type="hidden" name="plan" value="@plan" />
        <div class="mb-3">
            <label class="form-label">Email address</label>
            <input type="email" name="email" value="@User.Identity.Name" class="form-control" required autocomplete="email" />
        </div>
        <div class="mb-3">
            <label class="form-label">Card Number</label>
            <input type="text" name="cardNumber" class="form-control" maxlength="16" inputmode="numeric" placeholder="1234 5678 9012 3456" required />
        </div>
        <div class="row">
            <div class="col-6 mb-3">
                <label class="form-label">Expiry Date</label>
                <input type="text" name="expiry" class="form-control" placeholder="MM/YY" maxlength="5" required autocomplete="cc-exp" />
            </div>
            <div class="col-6 mb-3">
                <label class="form-label">CVC</label>
                <input type="text" name="cvc" class="form-control" maxlength="3" required autocomplete="cc-csc" />
            </div>
        </div>
        <button type="submit" class="btn pay-btn">
            <i class="bi bi-patch-check"></i> Pay ৳@amount &amp; Subscribe
        </button>
    </form>
    <div class="text-center mt-3" style="font-size:.97rem; color:#b89878;">
        <i class="bi bi-shield-lock"></i> Your payment is secured &amp; processed by Library System
    </div>
</div>
