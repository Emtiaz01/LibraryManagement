@{
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}
<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6 mb-4">
            <div class="card border-0 p-3 shadow border-top border-5 rounded h-100">
                <img src="@product.ProductImage" class="card-img-top rounded" style="height: 250px;" />

                <div class="card-body d-flex flex-column justify-content-between">
                    <div class="text-center">
                        <p class="card-title h5 text-dark opacity-75 text-uppercase">@product.ProductName</p>
                        <p class="card-title text-warning mb-2">by <b>@product.ProductAuthor</b></p>
                    </div>

                    <div class="text-center">
                        <hr />
                        <p class="card-text h5 text-dark">
                            @if (product.ProductPrice == 0)
                            {
                                <span class="text-success">Free</span>
                            }
                            else
                            {
                                <span class="text-danger">৳@product.ProductPrice</span>
                            }
                        </p>
                    </div>
                    <div class="mt-3">
                        <a asp-area="CustomerArea" asp-controller="Customer"
                           asp-action="Details"
                           asp-route-id="@product.ProductId"
                           class="btn btn-primary bg-gradient border-0 form-control">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            var message = '@TempData["Success"]';
            if (message) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: message,
                    confirmButtonColor: '#3085d6',
                    confirmButtonText: 'OK'
                });
            }
        });
    </script>
}
