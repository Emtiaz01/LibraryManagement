@model LibraryManagementSystem.ViewModel.BookLoanViewModel
@inject AdminXLoginRegistration.Data.ApplicationDbContext db
@{
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}

<style>
    .bs23-book-card-xl {
        width: 1000px;
        height: 540px;
        margin: 65px auto 0 auto;
        border-radius: 22px;
        box-shadow: 0 10px 42px -6px #1565c048;
        background: #fff;
        border: none;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .bs23-book-imgbox-xl {
        flex: 0 0 340px;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
    }

    .bs23-book-img-xl {
        border-radius: 15px;
        background: #e3f2fd;
        object-fit: contain;
        width: 260px;
        height: 370px;
        box-shadow: 0 4px 28px -7px #1565c048;
        display: block;
        margin: 0 auto;
    }

    .bs23-nocover-xl {
        width: 260px;
        height: 370px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 15px;
        background: #f4f7fa;
        color: #a8b;
        font-size: 2.25rem;
        border: 2px dashed #1976d2;
        margin: 0 auto;
    }

    .bs23-book-info-xl {
        flex: 1 1 620px;
        padding: 0 46px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 100%;
    }

    .bs23-book-title-xl {
        font-size: 2.4rem;
        font-weight: 900;
        color: #1565c0;
        margin-bottom: 16px;
        letter-spacing: 1.2px;
    }

    .bs23-book-author-xl {
        font-weight: 700;
        color: #2792e2;
        font-size: 1.25rem;
        margin-bottom: 14px;
    }

    .bs23-book-label-xl {
        color: #1976d2 !important;
        font-weight: 700;
        min-width: 130px;
        display: inline-block;
        margin-bottom: 6px;
    }

    .bs23-book-data-xl {
        font-size: 1.17rem;
        margin-bottom: 14px;
    }

    .bs23-owner-box-xl {
        background: #e3f1fa;
        border-radius: 8px;
        padding: 0.65rem 1.35rem;
        font-size: 1.08rem;
        color: #1976d2;
        font-weight: 700;
        display: inline-block;
    }
</style>

@if (Model.Product != null)
{
    <div class="bs23-book-card-xl">
        <div class="bs23-book-imgbox-xl">
            @if (!string.IsNullOrEmpty(Model.Product.ProductImage))
            {
                <img src="@Model.Product.ProductImage"
                     alt="Book Cover"
                     class="bs23-book-img-xl" />
            }
            else
            {
                <div class="bs23-nocover-xl">
                    <i class="bi bi-book"></i>
                </div>
            }
        </div>
        <div class="bs23-book-info-xl">
            <div class="bs23-book-title-xl">@Model.Product.ProductName</div>
            <div class="bs23-book-author-xl">by @Model.Product.ProductAuthor</div>
            <div class="bs23-book-data-xl">
                <span class="bs23-book-label-xl">Category:</span>
                @(Model.Product.Category != null ? Model.Product.Category.CategoryName : "—")
            </div>
            <div class="bs23-book-data-xl">
                <span class="bs23-book-label-xl">ISBN:</span> @Model.Product.ProductISBN
            </div>
            <div class="bs23-book-data-xl">
                <span class="bs23-book-label-xl">Description:</span>
                <span class="text-secondary">@(String.IsNullOrWhiteSpace(Model.Product.Description) ? "—" : Model.Product.Description)</span>
            </div>
            <div class="bs23-book-data-xl">
                <span class="bs23-book-label-xl">Available Quantity:</span> @Model.Product.ProductQuantity
            </div>
            @if (Model.Product.IsDonated && !string.IsNullOrWhiteSpace(Model.Product.DonorName))
            {
                <div class="bs23-owner-box-xl">
                    Donated by: @Model.Product.DonorName
                </div>
            }
        </div>
    </div>
}


}
