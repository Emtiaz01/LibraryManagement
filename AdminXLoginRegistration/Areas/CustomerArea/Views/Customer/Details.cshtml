@model LibraryManagementSystem.ViewModel.BookLoanViewModel
@{
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}

<form method="post">
    <div class="card shadow border-0 mt-4 mb-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model?.Product?.ProductName</h3>
                    <p class="text-white-50 fw-semibold mb-0">@Model?.Product?.ProductAuthor</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src=@Model?.Product?.ProductImage class="rounded" style="width:280px; height:400px;" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge">@Model?.Product?.Category.CategoryName</span>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50 ">ISBN : @Model?.Product?.ProductISBN</h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50  pb-2">
                                Previous Price:
                                <span class="text-decoration-line-through">
                                    ৳100
                                </span>
                            </h6>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Price</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">1</div>
                            </div>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>৳@Model?.Product?.ProductPrice</div>
                            </div>
                        </div>
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm">@Html.Raw(Model?.Product?.Description)</p>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                @if(Model?.BookLoan == null && Model?.Product.ProductQuantity>0)
                                {
                                    <button type="button"
                                            class="btn btn-primary w-100 py-2 text-uppercase fw-semibold"
                                            data-bs-toggle="modal"
                                            data-bs-target="#borrowModal"
                                            data-product-id="@Model?.Product.ProductId"
                                            data-user-id="@ViewBag.CurrentUserId">
                                        Borrow Now
                                    </button>
                                }
                                else if (Model?.BookLoan == null && Model?.Product.ProductQuantity == 0)
                                {
                                    <div class="alert alert-warning text-center fw-semibold">
                                        This book is currently unavailable.<br />
                                        @if (ViewBag.NextAvailableDate != null)
                                        {
                                            <span>Earliest expected return: <strong>@(((DateTime)ViewBag.NextAvailableDate).ToString("dd MMMM yyyy"))</strong></span>

                                        }
                                        else
                                        {
                                            <span>No return information available.</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-primary w-100 py-2 text-uppercase fw-semibold disabled">
                                            Return First
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="modal fade" id="borrowModal" tabindex="-1" aria-labelledby="borrowModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-area="CustomerArea" asp-action="BorrowBook" asp-controller="Customer" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="borrowModalLabel">Confirm Borrow</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="BookLoan.ProductId" id="ProductId" />
                    <input type="hidden" name="BookLoan.UserId" id="UserId" />
                    <div class="form-group mb-3">
                        <label for="BorrowDate">Borrow Date</label>
                        <input type="date" name="BookLoan.BorrowDate" class="form-control" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="DueDate">Due Date</label>
                        <input type="date" name="BookLoan.DueDate" class="form-control" required />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Confirm</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var message = '@TempData["Error"]';
            if (message) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: message,
                    confirmButtonColor: '#3085d6',
                    confirmButtonText: 'OK'
                });
            }
            $('#borrowModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var productId = button.data('product-id');
            var userId = button.data('user-id');  

            $('#ProductId').val(productId);
            $('#UserId').val(userId);
        });
        });
    </script>
}
