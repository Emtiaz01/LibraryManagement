@model LibraryManagementSystem.ViewModel.DonateBookViewModel
@{
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
<style>
    .bs23-donate-card {
        border-radius: 18px;
        box-shadow: 0 4px 20px -10px #002e6d33;
        background: #fff;
        max-width: 540px;
        margin: 2.5rem auto 0 auto;
    }

    .bs23-donate-header {
        background: linear-gradient(90deg,#002e6d 60%,#1565c0 100%);
        color: #fff;
        border-radius: 18px 18px 0 0;
        padding: 1.2rem 0 1.1rem 0;
        text-align: center;
    }

    .bs23-form-btn {
        background: #0A5CA9 !important;
        color: #fff !important;
        border-radius: 9px;
        padding: .7rem 0;
        font-weight: 600;
        box-shadow: 0 2px 9px -4px #002e6d33;
        min-width: 170px;
        transition: .18s;
    }

        .bs23-form-btn:hover {
            background: #002e6d !important;
        }

    .bs23-form-floating-2 label,
    .bs23-form-floating-2 .form-control,
    .bs23-form-floating-2 select {
        font-size: 1.04rem;
    }

    .bs23-form-floating-2 .form-control, .bs23-form-floating-2 select {
        border-radius: 8px !important;
        border: 1.4px solid #cbe1fa !important;
        background: #f7fafd;
    }

    .bs23-form-floating-2 {
        margin-bottom: 1.2rem;
    }
</style>

<div class="card bs23-donate-card">
    <div class="bs23-donate-header">
        <h2 class="mb-0"><i class="bi bi-gift"></i> Donate a Book</h2>
        <p class="mb-0" style="font-size:1.13rem;color: #eaf6ff;">Support your library and help others read!</p>
    </div>
    <div class="card-body p-4">
        @using (Html.BeginForm("DonateBook", "Customer", FormMethod.Post, new { area = "CustomerArea", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="bs23-form-floating-2 form-floating">
                @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", placeholder = "Book Name", required = "required" })
                <label>Book Name<span class="text-danger">*</span></label>
                @Html.ValidationMessageFor(m => m.ProductName, "", new { @class = "text-danger small" })
            </div>
            <div class="bs23-form-floating-2 form-floating">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", style = "height: 86px;", placeholder = "Description", required = "required" })
                <label>Description<span class="text-danger">*</span></label>
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger small" })
            </div>
            <div class="bs23-form-floating-2 form-floating">
                @Html.TextBoxFor(m => m.ProductISBN, new { @class = "form-control", placeholder = "ISBN", required = "required" })
                <label>ISBN<span class="text-danger">*</span></label>
                @Html.ValidationMessageFor(m => m.ProductISBN, "", new { @class = "text-danger small" })
            </div>
            <div class="bs23-form-floating-2 form-floating">
                @Html.TextBoxFor(m => m.ProductAuthor, new { @class = "form-control", placeholder = "Author", required = "required" })
                <label>Author<span class="text-danger">*</span></label>
                @Html.ValidationMessageFor(m => m.ProductAuthor, "", new { @class = "text-danger small" })
            </div>
            <div class="bs23-form-floating-2 form-floating">
                @Html.TextBoxFor(m => m.ProductQuantity, new { @class = "form-control", type = "number", min = "1", required = "required", placeholder = "Quantity" })
                <label>Quantity<span class="text-danger">*</span></label>
                @Html.ValidationMessageFor(m => m.ProductQuantity, "", new { @class = "text-danger small" })
            </div>
            <div class="bs23-form-floating-2 form-floating">
                @Html.DropDownListFor(m => m.CategoryId,
                new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"), "-- Select --",
                        new { @class = "form-select", required = "required", placeholder = "Category" })
            <label>Category<span class="text-danger">*</span></label>
            @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger small" })
        </div>
        <div class="mb-3">
            <label class="form-label">Upload Book Cover</label>
            <input type="file" name="ProductImageFile" class="form-control" accept="image/*" />
        </div>
        <div class="bs23-form-floating-2 form-floating">
            @Html.TextBoxFor(m => m.DonorName, new { @class = "form-control", placeholder = "Your Name" })
            <label>Your Name (optional)</label>
        </div>
        <div class="bs23-form-floating-2 form-floating">
            @Html.TextBoxFor(m => m.DonorEmail, new { @class = "form-control", type = "email", placeholder = "Your Email" })
            <label>Your Email (optional)</label>
        </div>
        <div class="mt-3 text-center">
            <button type="submit" class="btn bs23-form-btn">
                <i class="bi bi-box-arrow-up-right me-1"></i> Donate Book
            </button>
        </div>
                }
    </div>
</div>
