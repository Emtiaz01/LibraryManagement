@page
@model RegisterModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Brain Station 23 PLC | Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <style>
        body {
            background: linear-gradient(120deg,#e7effa 60%,#c0d9fa 100%) !important;
            min-height: 100vh;
        }

        .bs23-register-logo {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.8rem;
        }

            .bs23-register-logo img {
                height: 48px;
                width: auto;
                margin-right: 12px;
                border-radius: 10px;
                background: transparent;
            }

        .bs23-register-title {
            font-weight: 700;
            font-size: 2rem;
            color: #002e6d;
            letter-spacing: .5px;
        }

        .bs23-register-card {
            border-radius: 20px;
            box-shadow: 0 8px 32px -12px #002e6d33;
            border: none;
            background: #fff;
            margin-top: 3.5rem;
        }

            .bs23-register-card input, .bs23-register-card select {
                border-radius: 8px !important;
                border: 1.6px solid #cce3fc !important;
                font-size: 1.08rem;
            }

        .bs23-btn-main {
            background: #002e6d !important;
            color: #fff !important;
            border-radius: 9px;
            padding: .7rem 0;
            font-weight: 600;
            box-shadow: 0 3px 19px -12px #002e6d99;
            transition: .16s;
        }

            .bs23-btn-main:hover, .bs23-btn-main:focus {
                background: #1565c0 !important;
                color: #fff !important;
            }

        .bs23-btn-social {
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="container d-flex flex-column justify-content-center align-items-center" style="min-height:99vh;">
        <div class="card bs23-register-card px-2 py-2" style="width:100%;max-width:430px;">
            <div class="card-body px-4 py-4">
                <h5 class="text-center mb-3" style="color:#0A5CA9; font-weight:600; letter-spacing:.3px;">
                    Register a new membership
                </h5>
                <form method="post" autocomplete="off">
                    <div class="input-group mb-3">
                        <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger mb-2"></span>

                    <div class="input-group mb-3">
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger mb-2"></span>

                    <div class="input-group mb-3">
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger mb-2"></span>

                    <div class="input-group mb-3">
                        <select asp-for="Input.Role" class="form-select">
                            <option value="">-- Select Role --</option>
                            <option value="Customer">Customer</option>
                        </select>
                        <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                    </div>
                    <span asp-validation-for="Input.Role" class="text-danger mb-2"></span>

                    <div class="row align-items-center mb-2">
                        <div class="col-8">
                            <div class="form-check">
                                <input asp-for="Input.AcceptTerms" class="form-check-input" type="checkbox" id="terms" />
                                <label class="form-check-label" for="terms">
                                    I agree to the <a href="#">terms</a>
                                </label>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <button type="submit" class="btn bs23-btn-main w-100">Register</button>
                        </div>
                    </div>
                    <span asp-validation-for="Input.AcceptTerms" class="text-danger mb-2"></span>
                </form>
                <div class="social-auth-links text-center mb-3 d-grid gap-2">
                    <small class="text-secondary mt-2 mb-0">Or sign up using</small>
                    <a href="#" class="btn btn-outline-primary bs23-btn-social"><i class="bi bi-facebook me-2"></i>Facebook</a>
                    <a href="#" class="btn btn-outline-danger bs23-btn-social"><i class="bi bi-google me-2"></i>Google</a>
                </div>
                <div class="text-center mt-2 mb-0">
                    <a asp-area="Identity" asp-page="/Account/Login" class="ms-1">I already have a membership</a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
