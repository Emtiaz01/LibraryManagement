@page
@model LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Brain Station 23 PLC | Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="title" content="Brain Station 23 PLC | Login" />
    <meta name="author" content="Brain Station 23 PLC" />
    <meta name="description" content="Login to Brain Station 23 Dashboard" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <style>
        body {
            background: linear-gradient(120deg, #e7effa 55%, #c0d9fa 100%) !important;
            min-height: 100vh;
        }

        .bs23-login-logo {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.8rem;
        }

            .bs23-login-logo img {
                height: 48px;
                width: auto;
                margin-right: 12px;
                border-radius: 10px;
                background: #fff;
                box-shadow: 0 2px 14px 0 #1565c044;
            }

        .bs23-login-title {
            font-weight: 700;
            font-size: 2rem;
            color: #002e6d;
            letter-spacing: .5px;
        }

        .bs23-login-card {
            border-radius: 18px;
            box-shadow: 0 6px 30px -6px #0a407f44;
            border: none;
            margin-top: 3.5rem;
            background: #fff;
        }

            .bs23-login-card input, .bs23-login-card textarea {
                border-radius: 8px !important;
                border: 1.6px solid #cce3fc !important;
                font-size: 1.08rem;
            }

        .bs23-btn-main {
            background: #002e6d !important;
            color: #fff !important;
            border-radius: 9px;
            padding: .7rem 0;
            font-weight: 600;
            box-shadow: 0 3px 19px -10px #002e6d99;
            transition: .18s;
        }

            .bs23-btn-main:hover, .bs23-btn-main:focus {
                background: #1565c0 !important;
                color: #fff !important;
            }

        .social-auth-links .btn {
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="container d-flex flex-column justify-content-center align-items-center" style="min-height:99vh;">
       

        <div class="card bs23-login-card px-1 py-2" style="width:100%;max-width:410px;">
            <div class="card-body login-card-body px-4 py-4">
                <h5 class="text-center mb-3" style="color:#0A5CA9; font-weight:600; letter-spacing:.3px;">Sign in to your account</h5>

                <form method="post" class="my-0">
                    <div class="input-group mb-3">
                        <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger mb-2"></span>

                    <div class="input-group mb-3">
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger mb-2"></span>

                    <div class="row align-items-center mb-3">
                        <div class="col-7">
                            <div class="form-check">
                                <input asp-for="Input.RememberMe" class="form-check-input" id="rememberMe" />
                                <label class="form-check-label" for="rememberMe">Remember Me</label>
                            </div>
                        </div>
                        <div class="col-5 text-end">
                            <button type="submit" class="btn bs23-btn-main w-100">Sign In</button>
                        </div>
                    </div>
                </form>

                <div class="social-auth-links text-center mb-3 d-grid gap-2">
                    <small class="text-secondary mt-2 mb-0">Or sign in using</small>
                    <a href="#" class="btn btn-outline-primary">
                        <i class="bi bi-facebook me-2"></i> Facebook
                    </a>
                    <a href="#" class="btn btn-outline-danger">
                        <i class="bi bi-google me-2"></i> Google
                    </a>
                </div>

                <div class="text-center mt-3 mb-2">
                    <a href="forgot-password" class="me-2">Forgot password?</a> |
                    <a href="register" class="ms-2">Register</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
