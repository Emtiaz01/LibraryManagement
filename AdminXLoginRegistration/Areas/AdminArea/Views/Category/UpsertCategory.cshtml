@model Category
@{
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
<style>
    .bs23-section-card {
        border-radius: 16px !important;
        box-shadow: 0 2px 15px 0 rgba(0,46,109,.07);
        background: #fff;
        border: none;
        margin-top: 2rem;
        max-width: 550px;
        margin-left: auto;
        margin-right: auto;
    }

    .bs23-form-header {
        background: linear-gradient(90deg,#002E6D 70%,#1565c0 100%);
        color: #fff;
        border-radius: 16px 16px 0 0;
        text-align: center;
        padding: 1.35rem 0 1.15rem 0;
        border-bottom: 1.5px solid #eee;
    }

        .bs23-form-header h2 {
            margin: 0;
            font-size: 1.8rem;
            font-weight: 700;
            letter-spacing: .5px;
        }

    .bs23-form-inner {
        padding: 2rem 2.2rem 1.2rem 2.2rem;
        background: #f7fafd;
        border-radius: 0 0 16px 16px;
    }

    .form-floating > .form-control,
    .form-floating > .form-control:focus,
    .form-floating > textarea,
    .form-floating > textarea:focus {
        border-radius: 8px !important;
        border: 1.5px solid #cbe1f8;
        background: #fff;
        font-size: 1.05rem;
    }

    .form-floating label {
        font-weight: 500;
        color: #0a407f;
    }

    .form-floating textarea + label {
        margin-top: 0.75rem;
        margin-bottom: 0.5rem;
        display: block;
    }

    .bs23-btn-row {
        margin-top: 1.8rem;
        justify-content: flex-start;
        gap: 1rem;
    }

    .bs23-btn-main {
        background: #0A5CA9;
        color: #fff;
        font-weight: 600;
        border: none;
        border-radius: 8px;
        min-width: 150px;
        box-shadow: 0 2px 11px -5px #002e6d40;
        transition: .18s;
    }

        .bs23-btn-main:hover, .bs23-btn-main:focus {
            background: #002e6d;
            color: #fff;
        }

    .bs23-btn-outline {
        border: 2px solid #0A5CA9 !important;
        color: #0A5CA9 !important;
        font-weight: 600;
        border-radius: 8px;
        background: #f3f8fd;
        min-width: 155px;
    }

        .bs23-btn-outline:hover {
            background: #eaf1fd;
            color: #002e6d !important;
        }
</style>

<div class="card bs23-section-card">
    <div class="bs23-form-header">
        <h2>
            <i class="bi @(Model.CategoryId != 0 ? "bi-pencil-square" : "bi-folder-plus") me-2"></i>
            @(Model.CategoryId != 0 ? "Update" : "Create") Category
        </h2>
    </div>
    <div class="bs23-form-inner">
        <form method="post" asp-action="UpsertCategory" autocomplete="off">
            <input asp-for="CategoryId" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="mb-2"></div>
            <div class="form-floating mb-4">
                <input asp-for="CategoryName" class="form-control" placeholder="Category Name" />
                <label asp-for="CategoryName"></label>
                <span asp-validation-for="CategoryName" class="text-danger small"></span>
            </div>
            <div class="form-floating mb-4">
                <textarea asp-for="CategoryDescription" class="form-control" style="height:98px;" placeholder="Description"></textarea>
                @* <label asp-for="CategoryDescription" style="margin-top:0.75rem;margin-bottom:0.5rem;display:block;"></label> *@
                <span asp-validation-for="CategoryDescription" class="text-danger small"></span>
            </div>
            <div class="row bs23-btn-row">
                <div class="col-auto p-0">
                    <button type="submit" class="btn bs23-btn-main">
                        <i class="bi @(Model.CategoryId == 0 ? "bi-plus-circle" : "bi-check-circle") me-1"></i>
                        @(Model.CategoryId == 0 ? "Create" : "Update")
                    </button>
                </div>
                <div class="col-auto p-0">
                    <a asp-controller="Category" asp-action="Index"
                       class="btn bs23-btn-outline">
                        <i class="bi bi-arrow-left me-1"></i>
                        Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons  lists   table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
        });
    </script>
}
