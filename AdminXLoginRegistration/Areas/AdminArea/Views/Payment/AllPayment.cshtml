@model IEnumerable<LibraryManagementSystem.Models.Payment>
@{
    ViewBag.Title = "All Payments";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}
<div class="container mt-4">
    <h2>All Payments (Admin)</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>User</th>
                <th>Type</th>
                <th>Amount</th>
                <th>Status</th>
                <th>TransactionId</th>
                <th>Related BookLoan</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.PaymentDate.ToString("g")</td>
                    <td>@(p.User?.UserName ?? "-")</td>
                    <td>@p.PaymentType</td>
                    <td>@p.Amount @p.Currency.ToUpper()</td>
                    <td>@p.Status</td>
                    <td>@p.TransactionId</td>
                    <td>@(p.BookLoanId?.ToString() ?? "-")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
