@model LibraryManagementSystem.ViewModel.ProductViewModel
@{
    Layout = "~/Views/Shared/_AdminPage.cshtml";
    var isEdit = Model.Product.ProductId != 0;
    bool isDonated = (ViewBag.IsDonated != null && ViewBag.IsDonated == true);
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
<div class="container py-4" style="max-width: 520px;">
    <h2 class="mb-4 text-primary">
        <i class="bi bi-bookmark-plus"></i>
        @(isEdit ? "Edit Book" : "Add Book")
    </h2>
    
    @if (isDonated)
    {
        <div class="alert alert-warning mb-3">
            <i class="bi bi-exclamation-triangle"></i>
            <b>Donated Book cannot be edited</b>
        </div>
    }

    <form asp-action="Upsert" asp-controller="Product" asp-area="AdminArea"
          enctype="multipart/form-data" method="post">

        <input type="hidden" asp-for="Product.ProductId" />
        <input type="hidden" asp-for="Product.ProductImage" />

        <div class="mb-3">
            <label asp-for="Product.ProductName" class="form-label"></label>
            @if (isDonated)
            {
                <input asp-for="Product.ProductName" class="form-control" required readonly />
            }
            else
            {
                <input asp-for="Product.ProductName" class="form-control" required />
            }
            <span asp-validation-for="Product.ProductName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.ProductAuthor" class="form-label"></label>
            @if (isDonated)
            {
                <input asp-for="Product.ProductAuthor" class="form-control" required readonly />
            }
            else
            {
                <input asp-for="Product.ProductAuthor" class="form-control" required />
            }
            <span asp-validation-for="Product.ProductAuthor" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Description" class="form-label"></label>
            @if (isDonated)
            {
                <textarea asp-for="Product.Description" class="form-control" required readonly></textarea>
            }
            else
            {
                <textarea asp-for="Product.Description" class="form-control" required></textarea>
            }
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.ProductISBN" class="form-label"></label>
            @if (isDonated)
            {
                <input asp-for="Product.ProductISBN" class="form-control" required readonly />
            }
            else
            {
                <input asp-for="Product.ProductISBN" class="form-control" required />
            }
            <span asp-validation-for="Product.ProductISBN" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.ProductPrice" class="form-label"></label>
            @if (isDonated)
            {
                <input asp-for="Product.ProductPrice" type="number" step="0.01" min="0.01" class="form-control" required readonly />
            }
            else
            {
                <input asp-for="Product.ProductPrice" type="number" step="0.01" min="0.01" class="form-control" required />
            }
            <span asp-validation-for="Product.ProductPrice" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.CategoryId" class="form-label"></label>
            @if (isDonated)
            {
                <select asp-for="Product.CategoryId" class="form-select" asp-items="Model.CategoryList" required disabled>
                    <option value="">-- Select Category --</option>
                </select>
            }
            else
            {
                <select asp-for="Product.CategoryId" class="form-select" asp-items="Model.CategoryList" required>
                    <option value="">-- Select Category --</option>
                </select>
            }
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.ProductQuantity" class="form-label"></label>
            @if (isDonated)
            {
                <input asp-for="Product.ProductQuantity" type="number" class="form-control" min="0" required readonly />
            }
            else
            {
                <input asp-for="Product.ProductQuantity" type="number" class="form-control" min="0" required />
            }
            <span asp-validation-for="Product.ProductQuantity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Product Image</label>
            @if (isDonated)
            {
                <input type="file" name="file" class="form-control" accept="image/*" disabled />
            }
            else
            {
                <input type="file" name="file" class="form-control" accept="image/*" />
            }
            @if (!string.IsNullOrEmpty(Model.Product.ProductImage))
            {
                <img src="@Model.Product.ProductImage" alt="cover" class="img-thumbnail mt-2" style="height:80px;" />
            }
        </div>
        <div class="mb-3">
            <label class="form-label">Premium Book</label>
            @if (isDonated)
            {
                <input asp-for="Product.IsPremium" class="form-check-input" type="checkbox" disabled />
                <label asp-for="Product.IsPremium" class="form-check-label ms-2">Premium</label>
            }
            else
            {
                <div class="form-check">
                    <input asp-for="Product.IsPremium" class="form-check-input" type="checkbox" />
                    <label asp-for="Product.IsPremium" class="form-check-label">Premium</label>
                </div>
            }
            <span asp-validation-for="Product.IsPremium" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100" @(isDonated ? "disabled" : "")>
            <i class="bi bi-check-lg"></i> @(isEdit ? "Update" : "Add Book")
        </button>
        <a asp-action="Index" asp-controller="Product" asp-area="AdminArea"
           class="btn btn-link w-100 mt-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
