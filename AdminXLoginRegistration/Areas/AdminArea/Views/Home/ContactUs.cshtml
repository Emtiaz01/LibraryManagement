    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card shadow border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-envelope-at-fill fs-1 text-primary"></i>
                    </div>
