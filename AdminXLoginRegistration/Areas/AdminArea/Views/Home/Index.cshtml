@{
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/css/site - Copy.css">

<div class="library-hero-bg">
    <!-- Main message -->
    <div class="display-hero-message">
        <h1 class="fw-bolder text-white mb-1 text-shadow-lg">Welcome to Library Admin</h1>
        <p class="fs-4 text-white-50 mb-4 text-shadow">
            Books roll in. Members connect. <br> Your command center inspires organization & protection.
        </p>
        <i class="bi bi-shield-lock-fill fs-1 text-light animate-float2"></i>
    </div>
    <!-- Animated books landscape -->
    <div class="hero-cartoons">
        <div class="hero-book hero-book1"></div>
        <div class="hero-book hero-book2"></div>
        <div class="hero-book hero-book3"></div>
        <div class="hero-book hero-book4"></div>
        <div class="hero-book hero-book5"></div>
        <div class="hero-book hero-book6"></div>
        <div class="hero-book hero-book7"></div>
        <div class="hero-cart-handbook">
            <div class="book-hand"></div>
            <div class="hand-face">
                <div class="eye"></div>
                <div class="smile"></div>
            </div>
        </div>
    </div>
</div>