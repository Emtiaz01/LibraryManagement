@{
    ViewData["Title"] = "Our Services";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card shadow border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-card-checklist fs-1 text-info"></i>
                    </div>
                    <h1 class="fw-bold mb-3">@ViewData["Title"]</h1>
                    <p class="lead mb-4">Welcome to our library service portal. We are dedicated to providing the best resources and support for all members and students.</p>
                    <div class="row justify-content-center mb-2">
                        <div class="col-12 col-sm-6 col-md-6">
                            <ul class="list-group list-group-flush text-start">
                                <li class="list-group-item"><i class="bi bi-book-half text-primary me-2"></i>Extensive Book Catalog</li>
                                <li class="list-group-item"><i class="bi bi-person-vcard text-success me-2"></i>Membership Management</li>
                                <li class="list-group-item"><i class="bi bi-arrow-left-right text-warning me-2"></i>Borrow & Return System</li>
                                <li class="list-group-item"><i class="bi bi-bell text-danger me-2"></i>Overdue Alerts</li>
                                <li class="list-group-item"><i class="bi bi-graph-up-arrow text-info me-2"></i>Usage Analytics</li>
                                <li class="list-group-item"><i class="bi bi-headset text-secondary me-2"></i>Technical Support</li>
                            </ul>
                        </div>
                    </div>
                    <p class="text-muted small mt-4">
                        For further information, contact us or visit the admin dashboard.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
