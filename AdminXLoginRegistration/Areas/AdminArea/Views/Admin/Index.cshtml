@model List<LibraryManagementSystem.Models.ApplicationUser>
@{
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}

<style>
    .bs23-card {
        border-radius: 18px;
        box-shadow: 0 8px 32px -8px #0d6efd48;
        border: none;
    }

    .bs23-header {
        background: linear-gradient(90deg, #1565c0 65%, #2792e2 100%) !important;
        color: #fff !important;
        border-top-left-radius: 18px;
        border-top-right-radius: 18px;
        padding: 22px 32px 14px 32px;
        display: flex;
        align-items: center;
        column-gap: 17px;
    }

        .bs23-header .bi {
            font-size: 2rem;
        }

    .bs23-title {
        font-weight: 700;
        letter-spacing: 0.5px;
        margin-bottom: 0;
    }

    .bs23-table th {
        background: #e3f2fd !important;
        color: #1565c0 !important;
        font-weight: 700 !important;
        border-bottom: 2px solid #2792e2;
    }

    .bs23-table td {
        font-size: 1.08rem;
    }

    .bs23-table tbody tr:hover {
        background: #f1f8fe !important;
    }
</style>

<div class="container-xl px-0">
    <div class="bs23-card shadow mt-4">
        <div class="card-header bs23-header">
            <i class="bi bi-people-fill"></i>
            <h4 class="bs23-title">All Library Users</h4>
        </div>
        <div class="card-body px-4 py-4">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle bs23-table" id="_dataTable">
                    <thead>
                        <tr>
                            <th scope="col">Email</th>
                            <th scope="col">Role</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* Table data will be populated by DataTables or AJAX *@
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/TableData.js" asp-append-version="true"></script>
}
